// tsconfig.node.json
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler", // Or "NodeNext" or "Node16" if preferred for Node environment
    "allowSyntheticDefaultImports": true,
    "strict": true // Optional, but good practice for config files too
  },
  "include": [
    "vite.config.ts" // Adjust if your vite config is .js or has a different name
    // Add other Node-specific TypeScript files here, e.g., "scripts/**/*.ts"
  ]
}